// Habilitar extensiones de PostgreSQL
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [citext]
}

model Series {
  id          Int      @id @default(autoincrement())
  name        String
  code        String   @unique
  releaseDate DateTime
  logoUrl     String?
  sets        Set[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("series")
}

model Set {
  id          Int          @id @default(autoincrement())
  name        String
  code        String       @unique
  apiId       String?      @unique
  seriesId    Int
  releaseDate DateTime
  totalCards  Int
  description String?
  logoUrl     String?
  symbolUrl   String?
  series      Series       @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  cards       Card[]
  collections Collection[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("sets")
}

model Rarity {
  id          Int      @id @default(autoincrement())
  name        String
  code        String   @unique
  description String
  colorHex    String
  order       Int
  cards       Card[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("rarities")
}

model Card {
  id              Int              @id @default(autoincrement())
  number          String           
  name            String           @db.Citext
  setId           Int
  rarityId        Int
  cardType        String
  subtype         String?
  pokemonType     String?
  imageUrl        String?
  largeImageUrl   String?
  artist          String?
  // Variants from API
  hasNormalVariant      Boolean @default(false)
  hasReverseVariant     Boolean @default(false)
  hasHoloVariant        Boolean @default(false)
  hasFirstEditionVariant Boolean @default(false)
  set             Set              @relation(fields: [setId], references: [id], onDelete: Cascade)
  rarity          Rarity           @relation(fields: [rarityId], references: [id])
  collectionCards CollectionCard[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@unique([setId, number])
  @@index([name])
  @@index([setId])
  @@index([rarityId])
  @@map("cards")
}

model Collection {
  id              Int              @id @default(autoincrement())
  name            String
  description     String?
  type            String           @default("SET") // SET o CUSTOM
  setId           Int?             // Solo para colecciones tipo SET
  set             Set?             @relation(fields: [setId], references: [id], onDelete: Cascade)
  collectionCards CollectionCard[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@map("collections")
}

model CollectionCard {
  id           Int        @id @default(autoincrement())
  collectionId Int
  cardId       Int
  quantity     Int        @default(1)
  // User-owned variants
  ownedNormal       Boolean @default(false)  // Usuario tiene versi贸n normal
  ownedReverse      Boolean @default(false)  // Usuario tiene versi贸n reverse
  ownedHolo         Boolean @default(false)  // Usuario tiene versi贸n holo
  ownedFirstEdition Boolean @default(false)  // Usuario tiene versi贸n first edition
  condition    String?
  notes        String?
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  card         Card       @relation(fields: [cardId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([collectionId, cardId])
  @@index([collectionId])
  @@index([cardId])
  @@map("collection_cards")
}